# proxy_params

# Pass the original Host header from the client

proxy_set_header Host $host;

# Pass the client’s real IP address to the backend server

proxy_set_header X-Real-IP $remote_addr;

# Pass the client’s IP address (works with a load balancer or other proxies)

proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

# Pass the original protocol (http or https) for the client

proxy_set_header X-Forwarded-Proto $scheme;

# Enable WebSocket proxying

proxy_set_header Upgrade $http_upgrade;
proxy_set_header Connection "upgrade";

# Set a timeout for reading a response from the proxied server

#proxy_read_timeout 60s;

# Set a timeout for establishing a connection with the proxied server

#proxy_connect_timeout 60s;

# Set a timeout for sending a request to the proxied server

#proxy_send_timeout 60s;

# Optional: Set the maximum size of data that can be sent to the backend (default is 1 MB)

client_max_body_size 100M;

# Optional: Buffer size for headers from the proxied server (tune as necessary)

#proxy_buffer_size 128k;
#proxy_buffers 4 256k;
#proxy_busy_buffers_size 256k;

# Optional: Enables compression on responses from the proxied server

#proxy_set_header Accept-Encoding "";
